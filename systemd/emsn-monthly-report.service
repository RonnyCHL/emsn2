[Unit]
Description=EMSN Monthly Bird Activity Report Generator
After=network-online.target postgresql.service
Wants=network-online.target

[Service]
Type=oneshot
User=ronny
WorkingDirectory=/home/ronny/emsn2/scripts/reports
Environment="EMSN_DB_PASSWORD=REDACTED_DB_PASS"
Environment="ANTHROPIC_API_KEY=REDACTED_API_KEY"
ExecStart=/home/ronny/emsn2/venv/bin/python3 /home/ronny/emsn2/scripts/reports/monthly_report.py
StandardOutput=append:/mnt/usb/logs/emsn-monthly-report.log
StandardError=append:/mnt/usb/logs/emsn-monthly-report.error.log

[Install]
WantedBy=multi-user.target
