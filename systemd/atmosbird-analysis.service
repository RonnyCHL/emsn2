[Unit]
Description=AtmosBird Advanced Analysis
After=network.target

[Service]
Type=oneshot
User=ronny
WorkingDirectory=/home/ronny/emsn2/scripts/atmosbird
Environment="EMSN_DB_PASSWORD=REDACTED_DB_PASS"
ExecStart=/home/ronny/emsn2/venv/bin/python3 /home/ronny/emsn2/scripts/atmosbird/atmosbird_analysis.py
StandardOutput=append:/mnt/usb/logs/atmosbird-analysis.log
StandardError=append:/mnt/usb/logs/atmosbird-analysis.error.log

[Install]
WantedBy=multi-user.target
