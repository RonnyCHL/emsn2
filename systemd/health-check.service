[Unit]
Description=EMSN System Health Check
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=ronny
WorkingDirectory=/home/ronny/emsn2
ExecStart=/home/ronny/emsn2/venv/bin/python3 /home/ronny/emsn2/scripts/maintenance/system_health_check.py
StandardOutput=append:/mnt/usb/logs/health_check.log
StandardError=append:/mnt/usb/logs/health_check.error.log

# Security
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
