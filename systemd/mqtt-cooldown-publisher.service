[Unit]
Description=EMSN MQTT Cooldown Publisher
After=network.target mosquitto.service
Wants=mosquitto.service

[Service]
Type=simple
User=ronny
Group=ronny
WorkingDirectory=/home/ronny/emsn2/scripts/ulanzi
ExecStart=/home/ronny/emsn2/venv/bin/python3 /home/ronny/emsn2/scripts/ulanzi/mqtt_cooldown_publisher.py
Restart=always
RestartSec=10
StandardOutput=append:/mnt/usb/logs/mqtt-cooldown-publisher.log
StandardError=append:/mnt/usb/logs/mqtt-cooldown-publisher.log

[Install]
WantedBy=multi-user.target
