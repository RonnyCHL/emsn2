[Unit]
Description=EMSN Seasonal Bird Report Generator
After=network.target

[Service]
Type=oneshot
User=ronny
Group=ronny
WorkingDirectory=/home/ronny/emsn2/scripts/reports
EnvironmentFile=/home/ronny/.env.emsn-reports
ExecStart=/home/ronny/emsn2/venv/bin/python3 /home/ronny/emsn2/scripts/reports/seasonal_report.py --pending
StandardOutput=append:/mnt/usb/logs/emsn-seasonal-report.log
StandardError=append:/mnt/usb/logs/emsn-seasonal-report.error.log

[Install]
WantedBy=multi-user.target
