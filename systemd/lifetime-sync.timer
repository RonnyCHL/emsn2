[Unit]
Description=EMSN Lifetime Sync Timer - Runs every 5 minutes
Documentation=https://github.com/emsn/bird-detection
After=network-online.target
Wants=network-online.target

[Timer]
# Run every 5 minutes
OnCalendar=*:0/5
# Start 2 minutes after boot
OnBootSec=2min
# If a run was missed (system was off), run immediately
Persistent=true
# Randomize start time by up to 30 seconds to avoid exact timing patterns
RandomizedDelaySec=30

[Install]
WantedBy=timers.target
