[Unit]
Description=AtmosBird Daily Timelapse Generator
After=network.target

[Service]
Type=oneshot
User=ronny
WorkingDirectory=/home/ronny/emsn2/scripts/atmosbird
Environment="EMSN_DB_PASSWORD=REDACTED_DB_PASS"
ExecStart=/home/ronny/emsn2/venv/bin/python3 /home/ronny/emsn2/scripts/atmosbird/atmosbird_timelapse.py
StandardOutput=append:/mnt/usb/logs/atmosbird-timelapse.log
StandardError=append:/mnt/usb/logs/atmosbird-timelapse.error.log

[Install]
WantedBy=multi-user.target
