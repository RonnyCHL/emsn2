{
  "dashboard": {
    "title": "AtmosBird - Sky Monitoring",
    "tags": ["atmosbird", "sky", "astronomy"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 3,
    "refresh": "5m",
    "panels": [
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 1,
        "title": "Latest Sky Capture",
        "type": "table",
        "gridPos": {"x": 0, "y": 0, "w": 24, "h": 4},
        "targets": [{
          "datasource": {"type": "postgres", "uid": "emsn_postgres"},
          "rawSql": "SELECT observation_timestamp, sky_type, cloud_coverage as clouds_pct, ROUND(brightness::numeric, 1) as brightness, CONCAT('http://192.168.1.87:8090/atmosbird/', SUBSTRING(image_path FROM 19)) as photo_url FROM sky_observations ORDER BY observation_timestamp DESC LIMIT 1",
          "format": "table",
          "refId": "A"
        }],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "overrides": [{
            "matcher": {"id": "byName", "options": "photo_url"},
            "properties": [{
              "id": "links",
              "value": [{
                "title": "View Photo",
                "url": "${__value.raw}"
              }]
            }]
          }]
        }
      },
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 2,
        "title": "Total Sky Observations",
        "type": "stat",
        "gridPos": {"x": 0, "y": 4, "w": 6, "h": 3},
        "targets": [{
          "datasource": {"type": "postgres", "uid": "emsn_postgres"},
          "rawSql": "SELECT COUNT(*) FROM sky_observations",
          "format": "table",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "blue"},
                {"value": 100, "color": "green"},
                {"value": 1000, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 3,
        "title": "Observations Today",
        "type": "stat",
        "gridPos": {"x": 6, "y": 4, "w": 6, "h": 3},
        "targets": [{
          "datasource": {"type": "postgres", "uid": "emsn_postgres"},
          "rawSql": "SELECT COUNT(*) FROM sky_observations WHERE observation_timestamp >= CURRENT_DATE",
          "format": "table",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 4,
        "title": "Disk Usage",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 4, "w": 6, "h": 3},
        "targets": [{
          "datasource": {"type": "postgres", "uid": "emsn_postgres"},
          "rawSql": "SELECT ROUND(disk_usage_percent::numeric, 1) FROM atmosbird_health ORDER BY measurement_timestamp DESC LIMIT 1",
          "format": "table",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 5,
        "title": "Photos Today",
        "type": "stat",
        "gridPos": {"x": 18, "y": 4, "w": 6, "h": 3},
        "targets": [{
          "datasource": {"type": "postgres", "uid": "emsn_postgres"},
          "rawSql": "SELECT photos_captured_today FROM atmosbird_health ORDER BY measurement_timestamp DESC LIMIT 1",
          "format": "table",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 6,
        "title": "Cloud Coverage & Brightness (24h)",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 7, "w": 24, "h": 8},
        "targets": [
          {
            "datasource": {"type": "postgres", "uid": "emsn_postgres"},
            "rawSql": "SELECT observation_timestamp as time, cloud_coverage as value, 'Cloud Coverage %' as metric FROM sky_observations WHERE observation_timestamp >= NOW() - INTERVAL '24 hours' ORDER BY observation_timestamp",
            "format": "time_series",
            "refId": "A"
          },
          {
            "datasource": {"type": "postgres", "uid": "emsn_postgres"},
            "rawSql": "SELECT observation_timestamp as time, brightness::numeric as value, 'Brightness' as metric FROM sky_observations WHERE observation_timestamp >= NOW() - INTERVAL '24 hours' ORDER BY observation_timestamp",
            "format": "time_series",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Cloud Coverage %"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "blue"}},
                {"id": "custom.axisPlacement", "value": "left"},
                {"id": "min", "value": 0},
                {"id": "max", "value": 100},
                {"id": "unit", "value": "percent"}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Brightness"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "yellow"}},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        }
      },
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 11,
        "title": "üõ∞Ô∏è ISS Passages",
        "type": "stat",
        "gridPos": {"x": 0, "y": 15, "w": 6, "h": 3},
        "targets": [{
          "datasource": {"type": "postgres", "uid": "emsn_postgres"},
          "rawSql": "SELECT COUNT(*) FROM iss_passes",
          "format": "table",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "gray"},
                {"value": 1, "color": "blue"},
                {"value": 5, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 12,
        "title": "üåü Meteoor Detecties",
        "type": "stat",
        "gridPos": {"x": 6, "y": 15, "w": 6, "h": 3},
        "targets": [{
          "datasource": {"type": "postgres", "uid": "emsn_postgres"},
          "rawSql": "SELECT COUNT(*) FROM meteor_detections",
          "format": "table",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "gray"},
                {"value": 1, "color": "orange"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 13,
        "title": "‚≠ê Heldere Nachten",
        "type": "stat",
        "gridPos": {"x": 12, "y": 15, "w": 6, "h": 3},
        "targets": [{
          "datasource": {"type": "postgres", "uid": "emsn_postgres"},
          "rawSql": "SELECT COUNT(*) FROM star_brightness WHERE star_count > 10",
          "format": "table",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "gray"},
                {"value": 1, "color": "purple"},
                {"value": 10, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 14,
        "title": "üåô Maan in Camera",
        "type": "stat",
        "gridPos": {"x": 18, "y": 15, "w": 6, "h": 3},
        "targets": [{
          "datasource": {"type": "postgres", "uid": "emsn_postgres"},
          "rawSql": "SELECT COUNT(*) FROM moon_observations WHERE detected_in_image = true AND altitude_degrees >= 30",
          "format": "table",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "gray"},
                {"value": 1, "color": "blue"},
                {"value": 50, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 7,
        "title": "Sky Type Distribution (24h)",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 18, "w": 6, "h": 8},
        "targets": [{
          "datasource": {"type": "postgres", "uid": "emsn_postgres"},
          "rawSql": "SELECT sky_type, COUNT(*) as count FROM sky_observations WHERE observation_timestamp > NOW() - INTERVAL '24 hours' GROUP BY sky_type",
          "format": "table",
          "refId": "A"
        }],
        "options": {
          "legend": {"displayMode": "list", "placement": "right"},
          "pieType": "pie",
          "reduceOptions": {"values": true, "calcs": ["lastNotNull"]},
          "tooltip": {"mode": "single"}
        }
      },
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 15,
        "title": "üõ∞Ô∏è ISS Passages Log",
        "type": "table",
        "gridPos": {"x": 6, "y": 18, "w": 10, "h": 8},
        "targets": [{
          "datasource": {"type": "postgres", "uid": "emsn_postgres"},
          "rawSql": "SELECT TO_CHAR(pass_start, 'YYYY-MM-DD HH24:MI') as passage_start, ROUND(max_elevation_degrees::numeric, 1) as max_hoogte, ROUND(duration_seconds/60.0, 1) as duur_min, CASE WHEN visually_confirmed THEN '‚úì' ELSE '-' END as bevestigd, notes FROM iss_passes ORDER BY pass_start DESC LIMIT 10",
          "format": "table",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "custom": {"align": "left"}
          }
        }
      },
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 8,
        "title": "Moon Phase Progress",
        "type": "table",
        "gridPos": {"x": 16, "y": 18, "w": 8, "h": 8},
        "targets": [{
          "datasource": {"type": "postgres", "uid": "emsn_postgres"},
          "rawSql": "SELECT phase_name, ROUND(illumination_percent::numeric, 1) as illumination, age_days, TO_CHAR(observation_timestamp, 'YYYY-MM-DD HH24:MI') as timestamp FROM moon_observations ORDER BY observation_timestamp DESC LIMIT 10",
          "format": "table",
          "refId": "A"
        }]
      },
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 9,
        "title": "System Health",
        "type": "table",
        "gridPos": {"x": 0, "y": 26, "w": 12, "h": 6},
        "targets": [{
          "datasource": {"type": "postgres", "uid": "emsn_postgres"},
          "rawSql": "SELECT TO_CHAR(measurement_timestamp, 'HH24:MI') as timestamp, photos_captured_today as photos, ROUND(disk_usage_percent::numeric, 1) as disk_pct, CASE WHEN last_capture_success THEN '‚úì' ELSE '‚úó' END as status FROM atmosbird_health ORDER BY measurement_timestamp DESC LIMIT 10",
          "format": "table",
          "refId": "A"
        }]
      },
      {
        "datasource": {"type": "postgres", "uid": "emsn_postgres"},
        "id": 10,
        "title": "Recent Timelapses",
        "type": "table",
        "gridPos": {"x": 12, "y": 26, "w": 12, "h": 6},
        "targets": [{
          "datasource": {"type": "postgres", "uid": "emsn_postgres"},
          "rawSql": "SELECT created_timestamp, timelapse_type, frame_count, ROUND(duration_seconds::numeric, 1) as duration_sec, ROUND((file_size_bytes/1024/1024)::numeric, 2) as size_mb, CONCAT('http://192.168.1.87:8090/atmosbird/', SUBSTRING(video_path FROM 19)) as video_url FROM timelapses ORDER BY created_timestamp DESC LIMIT 10",
          "format": "table",
          "refId": "A"
        }],
        "fieldConfig": {
          "overrides": [{
            "matcher": {"id": "byName", "options": "video_url"},
            "properties": [{
              "id": "links",
              "value": [{
                "title": "Download Video",
                "url": "${__value.raw}"
              }]
            }]
          }]
        }
      }
    ],
    "time": {"from": "now-24h", "to": "now"},
    "timepicker": {}
  },
  "overwrite": true
}
